<style is:global lang="scss">
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	:root {
		--bg-color: black;
		--fg-color: white;

		--accent-color: hsl(254, 33%, 30%);
		--accent-color-transparent: hsla(254, 33%, 30%, .7);
		--accent-color-fully-transparent: hsla(254, 33%, 30%, 0);
		--on-accent-color: white;
		--accent-gradient: linear-gradient(to right, var(--accent-color), black);
		--accent-gradient-reverse: linear-gradient(to left, var(--accent-color), black);
		--link-color: hsl(254, 50%, 70%);

		--card-color: black;
		--card-text-color: white;
		--card-hover-color: hsl(254, 33%, 35%);
		--card-hover-text-color: white;
		--card-border-color: hsl(254, 33%, 40%);

		--corner-size: .35rem;
	}
	
	html {
		font-family: 'Poppins', sans-serif;
		background-color: var(--bg-color);
		color: var(--fg-color);
		-webkit-tap-highlight-color: transparent;
	}

	::selection {
		background-color: var(--card-border-color);
	}

	h1, h2, h3, strong {
		font-family: 'Righteous', cursive;
	}

	footer {
		background-color: var(--accent-color);
		color: var(--fg-color);
		display: flex;
		flex-direction: column;
		padding: 2rem;
		gap: .25rem;
		align-items: flex-start;

		.logo {
			font-family: 'Righteous', cursive;
			font-size: 2rem;
		}

		a {
			color: var(--fg-color);
			text-decoration: none;

			&:hover {
				opacity: 0.6;
			}
		}
	}

	a {
		text-decoration: none;
		color: var(--link-color);

		&:hover {
			filter: brightness(0.7);
		}
	}

	main {
		min-height: 100vh;
	}

