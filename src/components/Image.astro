---
import type { ImageMetadata } from "astro/dist/assets/types";

interface Props extends Omit<HTMLImageElement, "src"> {
  src: ImageMetadata;
}

const { src, ...rest } = Astro.props;
const { src: source, width, height } = src;
---

<img src={source} style={`aspect-ratio: ${width / height}`} {...rest} />
